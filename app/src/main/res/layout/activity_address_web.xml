<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityAddress_web">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddress_web"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/with"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="@string/txt_myAddress" />

    <Button
        android:id="@+id/btnSaveaddress_web"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@color/with"
        android:text="@string/txt_save"
        android:textColor="@color/colorBtnRegis"
        app:layout_constraintEnd_toEndOf="@+id/toolbarAddress_web"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/web_address"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAddress_web" />
</androidx.constraintlayout.widget.ConstraintLayout>