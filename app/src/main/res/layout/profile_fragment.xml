<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="8dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/imageViewUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_style1"
                        android:src="@drawable/baseline_account_circle_black_24dp" />
                </androidx.cardview.widget.CardView>



                <Button
                    android:id="@+id/btnRegisOrLogin"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="74dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_style"
                    android:text="@string/txt_btnRegis"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textCurrenyUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@id/imageViewUser"
                    android:gravity="center"
                    android:text="textCurrenyUserName" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:text="@string/txt_btnMywish" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:text="@string/title_cart" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:text="@string/txt_btnCallHistory" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button10"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_article_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_ManagPO" />

                <Button
                    android:id="@+id/button9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_feedback_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_callData" />

                <Button
                    android:id="@+id/button11"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_send_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_RequetQtu" />

                <Button
                    android:id="@+id/button12"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:gravity="center|left"
                    android:text="@string/txt_ManagQut"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button14"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:gravity="center|left"
                    android:text="@string/txt_settingManag"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button13"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:gravity="center|left"
                    android:text="@string/txt_myCuopon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button19"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_myAddress" />

                <Button
                    android:id="@+id/button18"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_favorite_border_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_AppComplain" />

                <Button
                    android:id="@+id/button15"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:gravity="center|left"
                    android:text="@string/txt_heplCenter"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button16"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:gravity="center|left"
                    android:text="@string/txt_Currencytool"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button17"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_settings_applications_black_24dp"
                    android:gravity="center|left"
                    android:text="@string/txt_Setting" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>