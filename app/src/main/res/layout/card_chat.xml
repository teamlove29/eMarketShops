<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImgUserchat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/imageViewUserChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_style1"
                android:src="@drawable/baseline_account_circle_black_24dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textChatUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_toEndOf="@+id/cardImgUserchat"
            android:layout_toRightOf="@+id/cardImgUserchat"
            android:text="chatUsername"
            android:textSize="18sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textChatUsername"
            android:layout_toStartOf="@+id/icoUnread"
            android:layout_toEndOf="@+id/cardImgUserchat"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/cardImgUserchat"
            android:text="chat"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textChatTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textChat"
            android:layout_marginLeft="14dp"
            android:layout_toStartOf="@+id/icoUnread"
            android:layout_toEndOf="@+id/cardImgUserchat"
            android:layout_toRightOf="@+id/cardImgUserchat"
            android:text="chat time"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/icoUnread"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textChatUsername"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/baseline_chat_bubble_red_500_24dp"
            android:gravity="center|top"
            android:paddingTop="2dp"
            android:text="1"
            android:textColor="@color/with"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

